<h1><%= @recipe.title %></h1>

<h3>Author: <%= @recipe.user.name %></h3>

<p>Posted <%= @timestamp %></p>

<h3>Instructions: </h3>
<p><%= @recipe.method %></p>

<%= image_tag @recipe.image %>

<% @recipe.comments.each do |comment| %>
  <h5><%= comment.user.name %>:</h5>
  <p><%= comment.comment %></p>
  <hr>
<% end %>
