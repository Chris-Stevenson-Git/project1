<!DOCTYPE html>
<html>
  <head>
    <title>recipebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'jquery' %>
    <%= javascript_include_tag 'application' %>

    <%= cloudinary_js_config %>
  </head>

  <body>
    <% if controller.action_name != "welcome" %>
      <nav>
        <ul>
          <span id='logo'>recipebook</span>
          <% if @current_user.present? %>
          <span>Hello <%= @current_user.name %></span>
          <li><%= link_to 'Logout', login_path, method: 'delete' %></li>
          <li><%= link_to 'Home', home_path %></li>
          |
          <li><%= link_to 'My Recipes', recipes_path %></li>
          <li><%= link_to 'My Shopping Lists', shopping_lists_path %></li>
          <% else %>
          <li><%= link_to 'Login',  login_path %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
          <% end %>
        </ul>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
